@model IEnumerable<DarbasGamykloje.ViewModels.LivingSpaceListView>

@{
    ViewBag.Title = "Living Spaces";
}

<h2>Living Spaces</h2>
<h2>@TempData["err"]</h2>
<p>
    @Html.ActionLink("Create New", "Create", "LivingSpace", new { @class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.adress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.adress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id_LivingSpace }, new { @class = "btn btn-danger action" })
        </td>
    </tr>
}

</table>
